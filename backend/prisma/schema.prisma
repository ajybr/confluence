generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String            @id @default(uuid())
  username       String            @unique
  password       String
  isDeleted      Boolean           @default(false)
  bio            String
  profilePicture String?
  messages       Message[]
  reactions      MessageReaction[]
  viewedMessages MessageView[]
  createdRooms   Room[]            @relation("Creator")
  rooms          Room[]            @relation("Membership")
}

model Room {
  id             String    @id @default(cuid())
  roomName       String
  createdAt      DateTime  @default(now())
  createdById    String
  description    String
  profilePicture String?
  messages       Message[]
  createdBy      User      @relation("Creator", fields: [createdById], references: [id])
  users          User[]    @relation("Membership")
}

model Message {
  id        String            @id @default(uuid())
  content   String
  mediaUrl  String?
  senderId  String
  roomId    String
  timestamp DateTime          @default(now())
  replyToId String?
  replyTo   Message?          @relation("MessageReplies", fields: [replyToId], references: [id])
  replies   Message[]         @relation("MessageReplies")
  room      Room              @relation(fields: [roomId], references: [id], onDelete: Cascade)
  sender    User              @relation(fields: [senderId], references: [id])
  reactions MessageReaction[]
  views     MessageView[]
}

model MessageView {
  id        String   @id @default(uuid())
  messageId String
  userId    String
  viewedAt  DateTime @default(now())
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
}

model MessageReaction {
  id        String  @id @default(uuid())
  messageId String
  userId    String
  type      String
  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, messageId, type])
}
